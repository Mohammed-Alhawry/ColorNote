<UserControl x:Class="ColorNote.View.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ColorNote.View"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="EditButtonTemplate">
            <Button Background="Blue"
                    Command="{Binding ElementName=dataGrid, Path=DataContext.EditNoteInformationCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=DataContext}">
                <materialDesign:PackIcon Kind="Pencil" Width="Auto" Height="Auto" />
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="DeleteButtonTemplate">
            <Button Background="Red" Foreground="White"
                    Command="{Binding ElementName=dataGrid, Path=DataContext.DeleteNoteCommand}"
                    CommandParameter="{Binding Id}">
                <materialDesign:PackIcon Kind="TrashCan"
                                         Width="Auto" Height="Auto" />
            </Button>
        </DataTemplate>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding BackgroundColor}" />
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <DataGrid x:Name="dataGrid" Grid.ColumnSpan="2" 
                  ItemsSource="{Binding Notes}" ColumnWidth="*" 
                   SelectedItem="{Binding SelectedNote, Mode=TwoWay}">
            
            <DataGrid.Columns>
                <DataGridTextColumn IsReadOnly="True" Header="Title" Binding="{Binding Title}" />
                <DataGridTextColumn IsReadOnly="True" Header="Date"
                                    Binding="{Binding Date, Converter={StaticResource DateTimeToOnlyDateConv}}" />
                <DataGridTemplateColumn Width="Auto" CellTemplate="{StaticResource EditButtonTemplate}" />
                <DataGridTemplateColumn Width="Auto" CellTemplate="{StaticResource DeleteButtonTemplate}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button HorizontalAlignment="Stretch" FontWeight="Bold" Grid.Row="1" Grid.ColumnSpan="2"
                Command="{Binding AddNoteCommand}"
                Content="Add note">
        </Button>
    </Grid>
</UserControl>